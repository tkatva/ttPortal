<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>Task and Time portlet for basic project and task management</description>
        <portlet-name>katvat.tt.ttportlet</portlet-name>
        <display-name>Task and Time portlet</display-name>

        <portlet-class>com.vaadin.terminal.gwt.server.ApplicationPortlet2</portlet-class>

		<init-param>
			<name>application</name>
			<value>katvat.tt.ttportlet.TtPortlet</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
        

        <portlet-info>
            <title>Task and Time portlet</title>
            <short-title>Task and Time portlet</short-title>
            <keywords>Task management</keywords>
        </portlet-info>
    </portlet>
</portlet-app>
